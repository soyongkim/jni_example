<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

			<ImageButton
			    android:id="@+id/washbtn"
			    android:layout_width="140dp"
			    android:layout_height="190dp"
			    android:layout_alignParentBottom="true"
			    android:layout_alignParentRight="true"
			    android:layout_marginBottom="76dp"
			    android:layout_marginRight="10dp"
			    android:background="@android:color/transparent"
			    android:padding="0dp"
			    android:scaleType="fitXY"
			    android:src="@drawable/wa_states" />

			   <ImageButton
			       android:id="@+id/toilbtn"
			       android:layout_width="100dp"
			       android:layout_height="180dp"
			       android:layout_alignParentLeft="true"
			       android:layout_marginTop="280dp"
			       android:background="@android:color/transparent"
			       android:padding="0dp"
			       android:scaleType="fitXY"
			       android:src="@drawable/toilet_states" />

			   <ImageButton
			       android:id="@+id/mirrorbtn"
			       android:layout_width="150dp"
			       android:layout_height="200dp"
			       android:layout_alignParentRight="true"
			       android:layout_marginTop="70dp"
			       android:background="@android:color/transparent"
			       android:padding="0dp"
			       android:scaleType="fitXY"
			       android:src="@drawable/mirror_normal_states" />

			        <ImageButton
			            android:id="@+id/womanbtn"
			            android:layout_width="250dp"
			            android:layout_height="200dp"
			            android:layout_marginTop="350dp"
			            android:layout_marginLeft="80dp"
			            android:background="@android:color/transparent"
			            android:padding="0dp"
			            android:scaleType="fitXY"
			            android:src="@drawable/woman_first_states" />

			        <ImageButton
			            android:id="@+id/shelfbtn"
			            android:layout_width="120dp"
			            android:layout_height="120dp"
			            android:layout_marginTop="170dp"
			            android:background="@android:color/transparent"
			            android:padding="0dp"
			            android:scaleType="fitXY"
			            android:src="@drawable/shelf_states" />

</RelativeLayout>
