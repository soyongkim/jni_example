<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/headBg"
    android:background="@drawable/clock_extends"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dip" >
	

	    <EditText 
	       android:id="@+id/clock_num1"
	       android:layout_width="wrap_content" 
	       android:layout_height="wrap_content"
	       android:textSize="40dp"
	       android:hint="0"
	       android:textColor="#ffffff"
	       android:textColorHint="#ffffff"
	       android:maxLength="1"
	       android:background="@null"
	       android:focusable="true"
	       android:inputType="number"
	       android:layout_marginTop="55dp"
	       android:layout_marginLeft="15dp"
	       />
	    
	    <EditText 
	       android:id="@+id/clock_num2"
	       android:layout_width="wrap_content" 
	       android:layout_height="wrap_content"
	       android:hint="0"
	       android:textSize="40dp"
	       android:textColor="#ffffff"
	       android:textColorHint="#ffffff"
	       android:maxLength="1"
	       android:background="@null"
	       android:focusable="true"
	       android:inputType="number"
	       android:layout_marginTop="55dp"
	       android:layout_marginLeft="45dp"
	       />
	    
	    <EditText 
	       android:id="@+id/clock_num3"
	       android:layout_width="wrap_content" 
	       android:layout_height="wrap_content"
	       android:hint="0"
	       android:textSize="40dp"
	       android:textColor="#ffffff"
	       android:textColorHint="#ffffff"
	       android:maxLength="1"
	       android:background="@null"
	       android:focusable="true"
	       android:inputType="number"
	       android:layout_marginTop="55dp"
	        android:layout_marginLeft="90dp"
	       />
	    
	    <EditText 
	       android:id="@+id/clock_num4"
	       android:layout_width="wrap_content" 
	       android:layout_height="wrap_content"
	       android:hint="0"
	       android:textSize="40dp"
	       android:textColor="#ffffff"
	       android:textColorHint="#ffffff"
	       android:maxLength="1"
	       android:background="@null"
	       android:focusable="true"
	       android:inputType="number"
	       android:layout_marginTop="55dp"
	        android:layout_marginLeft="120dp"
	       />

	        <ImageButton
	            android:id="@+id/clockCheckBtn"
	            android:layout_width="50dp"
	            android:layout_height="30dp"
	            android:layout_below="@+id/clock_num2"
	            android:layout_centerHorizontal="true"
	            android:background="@android:color/transparent"
	            android:padding="0dp"
	            android:scaleType="fitXY"
	            android:src="@drawable/clock_btn" />
 
</RelativeLayout>